<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="team_color_view" model="ir.ui.view">
          <field name="model">team.color</field>
          <field name="type">tree</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"></field>
              <field name="color" widget="color_picker"></field>
            </tree>
          </field>
      </record>
      <record id="team_color_view_form" model="ir.ui.view">
          <field name="model">team.color</field>
          <field name="type">form</field>
          <field name="arch" type="xml">
            <form>
              <field name="name"></field>
              <field name="color" widget="color_picker"></field>
            </form>
          </field>
      </record>
    </data>
</odoo> 