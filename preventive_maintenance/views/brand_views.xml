<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pm_brand_form" model="ir.ui.view">
            <field name="name">view.pm.brand.form</field>
            <field name="model">preventive_maintenance.brand</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
	                    <group>
	                    	<group>
	                    		<field name="name"/>
	                    	</group>
	                    	<group>
	                    		<field name="sequence"/>
	                    	</group>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_pm_brand_tree" model="ir.ui.view">
            <field name="name">view.pm.brand.tree</field>
            <field name="model">preventive_maintenance.brand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="pm_brand_action" model="ir.actions.act_window">
            <field name="name">Brand</field>
            <field name="res_model">preventive_maintenance.brand</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
